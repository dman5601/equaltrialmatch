datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String       @id @default(cuid())
  email       String       @unique
  password    String
  savedTrials SavedTrial[]
}

model SavedTrial {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  nctId     String
  createdAt DateTime @default(now())
  @@unique([userId, nctId])
}
